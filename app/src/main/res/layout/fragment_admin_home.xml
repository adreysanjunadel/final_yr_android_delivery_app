        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato"
        android:text="@string/admin_charts"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/adminHomeTextView"
        app:layout_constraintStart_toStartOf="@+id/adminHomeTextView"
        app:layout_constraintTop_toBottomOf="@+id/statisticsConstraintLayout" />

    <ImageView
        android:id="@+id/adminChartsCollapsible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_arrow_up"
        app:layout_constraintBottom_toBottomOf="@+id/chartsTextView"
        app:layout_constraintEnd_toEndOf="@+id/adminHomeTextView"
        app:layout_constraintStart_toEndOf="@+id/chartsTextView"
        app:layout_constraintTop_toTopOf="@+id/chartsTextView" />

