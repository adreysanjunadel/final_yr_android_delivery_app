                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/monthlyCompaniesRegisteredValueTextView"
                app:layout_constraintStart_toStartOf="@+id/companiesRegisteredLineChart"
                app:layout_constraintTop_toBottomOf="@+id/companiesRegisteredLineChart" />

            <TextView
                android:id="@+id/monthlyCompaniesRegisteredValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/lato"
                android:text="@string/admin_monthly_companies_registered_line_chart_total_company_count"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/companiesRegisteredLineChart"
                app:layout_constraintStart_toEndOf="@+id/montlyCompaniesRegisteredTextView"
                app:layout_constraintTop_toBottomOf="@+id/companiesRegisteredLineChart" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/downTimeReportsBarChartTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
