            android:fontFamily="@font/lato"
            android:text="@string/admin_weekly_order_count"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/weeklyUserLoginsValueTextView"
            app:layout_constraintStart_toStartOf="@+id/weeklyUserLoginsValueTextView"
            app:layout_constraintTop_toBottomOf="@+id/weeklyUserLoginsValueTextView" />

        <TextView
