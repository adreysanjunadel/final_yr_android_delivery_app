            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/lato"
            android:text="@string/admin_monthly_registered_company_count"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/weeklyOrderValuesTextView"
            app:layout_constraintStart_toStartOf="@+id/weeklyOrderValuesTextView"
            app:layout_constraintTop_toBottomOf="@+id/weeklyOrderValuesTextView" />

        <TextView
