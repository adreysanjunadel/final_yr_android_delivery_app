                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/monthlyUserRegistrationValuesTextView"
                app:layout_constraintStart_toStartOf="@+id/usersRegisteredBarChart"
                app:layout_constraintTop_toBottomOf="@+id/usersRegisteredBarChart" />

            <TextView
