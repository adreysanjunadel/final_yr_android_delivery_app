                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/lato"
                android:text="@string/admin_monthly_orders_status_pie_chart_total_order_count"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pieChartMonthlyOrdersTextView"
                app:layout_constraintTop_toBottomOf="@+id/orderStatusPieChart" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/monthlyUsersRegisteredBarChartTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/lato"
            android:text="@string/admin_monthly_users_registered_chart"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderStatusPieChartConstraintLayout" />

        <ImageView
