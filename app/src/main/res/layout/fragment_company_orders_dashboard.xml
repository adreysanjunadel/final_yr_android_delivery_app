<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/companyOrdersDashboardConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_blue"
    tools:context=".user.company.CompanyOrdersDashboardFragment">

    <Button
        android:id="@+id/companyOrderHistoryButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/bluegreen"
        android:fontFamily="@font/lato"
        android:text="@string/company_orders_dashboard_order_history"
        android:textSize="34sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_menu_history"
        app:iconGravity="textStart"
        app:iconPadding="32dp"
        app:iconSize="64dp"
        app:layout_constraintBottom_toTopOf="@+id/companyAnalyticsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/companyAnalyticsButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/scarlet"
        android:fontFamily="@font/lato"
        android:text="@string/company_orders_dashboard_company_analytics"
        android:textSize="34sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_menu_analytics"
        app:iconGravity="textStart"
        app:iconPadding="32dp"
        app:iconSize="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyOrderHistoryButton" />
</androidx.constraintlayout.widget.ConstraintLayout>